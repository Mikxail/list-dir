<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 3.2 Final//EN">
<html>
 <head>
  <title>Index of /pub/opera/win</title>
 </head>
 <body>
<h1>Index of <%= path %></h1>
<table width="70%">
	<tr>
		<th width="40">&nbsp;</th>
		<th> <a href="?sort=name<%= sort.val=="name" ? (sort.desc ? "" : "&desc=1") : ""%>">Name</a> </th>
		<th> <a href="?sort=ctime<%= sort.val=="ctime" ? (sort.desc ? "" : "&desc=1") : ""%>">Created</a> </th>
		<th> <a href="?sort=mtime<%= sort.val=="mtime" ? (sort.desc ? "" : "&desc=1") : ""%>">Last modified</a> </th>
		<th> <a href="?sort=size<%= sort.val=="size" ? (sort.desc ? "" : "&desc=1") : ""%>">Size</a> </th>
	</tr>
	<tr>
		<th colspan="5"><hr></th>
	</tr>
	<tr>
		<td valign="top">&nbsp;</td>
		<td><a href="../">Parent Directory</a></td>
		<td>&nbsp;</td>
		<td>&nbsp;</td>
		<td align="right">&nbsp;</td>
	</tr>
	<% data.forEach(function(record){ %>
		<tr>
			<td valign="top"><%- record.isFile ? "[File]": "[Dir ]" %></td>
			<td><a href="<%= record.name %><%- !record.isFile ? "/": "" %>"><%= record.name %></a></td>
			<td><%= dateformat(record.ctime) %></td>
			<td><%= dateformat(record.mtime) %></td>
			<td align="right"><%= record.size %></td>
		</tr>
	<% }) %>